<%-include("../partials/header")%>
    <div class="jumbotron jumbotron-fluid login" id="hotelEdit">
        <form method="POST" action="/hotels/<%=hotel._id%>/edit?_method=PUT">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" value="<%=hotel.name%>">
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="text" class="form-control" name="image" value="<%=hotel.image%>">
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" rows="3" name="description"><%=hotel.description%></textarea>
            </div>
            <div class="form-group">
                <label>Number of stars</label>
                <select class="form-control" name="stars">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label>Price</label>
                <input type="number" class="form-control" name="price" value="<%=hotel.price%>">
            </div>
            <div class="form-group">
                <label>Total rooms</label>
                <input type="number" class="form-control" name="totalRooms" value="<%=hotel.totalRooms%>">
            </div>
            <div class="form-group">
                <label>Latitude</label>
                <input type="number" class="form-control" name="latitude" value="<%=hotel.latitude%>">
            </div>
            <div class="form-group">
                <label>Longtitude</label>
                <input type="number" class="form-control" name="longtitude" value="<%=hotel.longtitude%>">
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary btn-lg">
            </div>
        </form>
    </div>

<%-include("../partials/footer")%>