<%-include("./partials/header")%>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="jumbotron mt-3">
                    <h1 class="display-4">Profile</h1>
                    <p class="lead">you can change any information down in the form below</p>
                    <hr class="my-4">
                        <form method="POST" action="/profile?_method=PUT">
                            <div class="form-group">
                                <label >username</label>
                                <input type="text" class="form-control" name="username" value="<%=currentUser.username%>" aria-describedby="emailHelp" required>
                            </div>
                            <div class="form-group">
                                <label>Full name</label>
                                <input type="text" class="form-control" name="fullName" value="<%=currentUser.fullName%>"  aria-describedby="emailHelp" required>
                            </div>
                            <div class="form-group">
                                <label>Email address</label>
                                <input type="email" name="email" class="form-control" value="<%=currentUser.email%>" aria-describedby="emailHelp" required>
                            </div>
                            <div class="form-group">
                                <label>New password</label>
                                <input type="password" name="password" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-check-inline" >
                                    <div id="Gender">Gender:</div>
                                    <input class="form-check-input" type="radio" name="gender" value="Male"> 
                                    <label class="form-check-label">Male</label>
                                    <span id="radio"></span>
                                    <input class="form-check-input" type="radio" name="gender" value="option2">
                                    <label class="form-check-label">Female</label>
                                </div>
                            </div>
                            <input type="submit" class="btn btn-success btn-lg" value="Submit changes">
                        </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="jumbotron mt-3">
                    <h1 class="display-4">Reservations</h1>
                    <p class="lead">Here is a list of reservations made</p>
                    <hr class="my-4">
                    <div>
                        <%if(!reservations.length){%>
                            <p>No reservations made on this site</p>
                        <%}else{%>
                            <%reservations.forEach(reservation=>{%>
                                <div class="profileRes mb-3">
                                    <div class="profileResImg1">
                                        <img class="profileResImg2" src="<%=reservation.HotelId.image%>" alt="Card image cap">
                                    </div>
                                    <div class="profileResDesc float-right">
                                        <div class="card-body">
                                            <h5 class="card-title"><%=reservation.HotelId.name%></h5>
                                            <h6 class="card-subtitle mb-2 text-muted">Rating: <%for(let i=0;i!=reservation.HotelId.stars;i++){%>
                                                <i class="fas fa-star stars"></i>
                                                <%}%>  
                                                <%for(let i=0;i!=5-reservation.HotelId.stars;i++){%>
                                                    <i class="fas fa-star darkstars"></i>
                                                <%}%>
                                            </h6>
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">start date: <span class="startDate"><%=reservation.startDate%></span></li>
                                                <li class="list-group-item">end date: <span class="endDate"><%=reservation.endDate%></span></li>
                                            </ul>
                                            <div class="card-body">
                                                <a href="/hotels/<%=reservation.HotelId._id%>" class="card-link">Go to hotel page</a>
                                            </div>
                                        </div>  
                                    </div>
                                </div>
                        <%})}%>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%-include("./partials/footer")%>