<%-include("../partials/header")%>
<div class="login">
    <form method="POST" action="/hotels/<%=hotel._id%>/reservation">
        <div class="form-group">
            <label for="exampleInputEmail1">Reservation date</label>
            <input type="date" class="form-control" id="exampleInputEmail1" name="startDate" aria-describedby="emailHelp" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Reservation end date</label>
            <input type="date" class="form-control" name="endDate" id="exampleInputPassword1" required>
        </div>
        <div class="form-group">
            <label >please write any specifications you would like to make about the room:</label>
            <textarea class="form-control" name="personalisation" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Reserve</button>
    </form>
</div> 
<%-include("../partials/footer")%>